# ===========================================
# MATHEMATICO BACKEND - ENVIRONMENT CONFIG
# ===========================================
# Copy this file to config.env and fill in your actual values
# NEVER commit config.env to git - it contains sensitive data!

# Server Configuration
PORT=5000
NODE_ENV=production

# Database Configuration
# Replace with your actual database credentials
DB_HOST=your-database-host.com
DB_PORT=3306
DB_USERNAME=your-db-username
DB_PASSWORD=your-secure-db-password
DB_DATABASE=your-database-name

# JWT Configuration
# Generate secure random strings (256-bit minimum)
JWT_SECRET=your-super-secure-jwt-secret-key-here-minimum-64-chars
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here-minimum-64-chars
JWT_ACCESS_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Admin Configuration
# Use strong passwords and consider using environment-specific admin accounts
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-very-secure-admin-password

# Backend Configuration
BACKEND_URL=https://your-backend-domain.com

MOBILE_API_URL=https://your-backend-domain.com/api/v1

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=uploads
STORAGE_SERVICE=cloudinary

# Cloudinary Configuration
# Get these from your Cloudinary dashboard
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Security Configuration
CORS_ORIGIN=https://your-frontend-domain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration
# Use app-specific passwords for Gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=Your App <noreply@yourdomain.com>

# Payment Configuration (Razorpay)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret

# Production Configuration
API_PREFIX=/api/v1
DB_SYNC=false
DB_LOGGING=false

# Currency Configuration
DEFAULT_CURRENCY=INR
CURRENCY_SYMBOL=â‚¹

# Vercel Configuration
VERCEL=1