{
  "name": "mathematico-platform",
  "version": "1.0.0",
  "description": "Mathematico Learning Platform - Mobile App, Backend, and Web Frontend",
  "private": true,
  "scripts": {
    "build": "cd Frontend && npm run build",
    "dev": "cd Frontend && npm run dev",
    "dev:backend": "cd Backend && npm run dev",
    "dev:mobile": "cd mathematico && npm start",
    "install": "npm install --force --legacy-peer-deps",
    "install:frontend": "cd Frontend && npm install --force --legacy-peer-deps",
    "install:backend": "cd Backend && npm install --force --legacy-peer-deps",
    "install:mobile": "cd mathematico && npm install --force --legacy-peer-deps",
    "install:all": "npm run install:frontend && npm run install:backend && npm run install:mobile",
    "vercel-build": "cd Backend && npm install --force --legacy-peer-deps"
  },
  "workspaces": [
    "Frontend",
    "Backend",
    "mathematico"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "os": [
    "win32"
  ],
  "cpu": [
    "x64"
  ],
  "keywords": [
    "education",
    "mathematics",
    "learning",
    "mobile-app",
    "react-native",
    "express",
    "nodejs"
  ],
  "author": "Mathematico Team",
  "license": "MIT"
}
