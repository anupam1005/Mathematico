{
  "name": "mathematico-platform",
  "version": "1.0.0",
  "description": "Mathematico Learning Platform - Backend + Frontend (No Workspace)",
  "private": true,
  "scripts": {
    "dev:backend": "cd Backend && npm run dev",
    "dev:mobile": "cd Frontend-app && npx expo start --clear",
    "start:backend": "cd Backend && npm start",
    "start:mobile": "cd Frontend-app && npx expo start",
    "install:backend": "cd Backend && npm install",
    "install:mobile": "cd Frontend-app && npm install",
    "install:all": "npm run install:backend && npm run install:mobile"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mathematico",
    "education",
    "react-native",
    "express",
    "backend",
    "mobile",
    "learning"
  ],
  "author": "Mathematico Team",
  "license": "MIT"
}
