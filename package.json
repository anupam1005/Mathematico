{
  "name": "mathematico-platform",
  "version": "1.0.0",
  "description": "Mathematico Learning Platform - Mobile App, Backend, and Web Frontend",
  "private": true,
  "scripts": {
    "dev": "npm run dev:backend",
    "dev:backend": "npm run dev --workspace=Backend",
    "dev:mobile": "npm run start --workspace=mathematico",
    "install:all": "npm install --workspaces"
  },
  "workspaces": [
    "Backend",
    "mathematico"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "education",
    "mathematics",
    "learning",
    "mobile-app",
    "react-native",
    "express",
    "nodejs"
  ],
  "author": "Mathematico Team",
  "license": "MIT",
  "overrides": {
    "@rollup/rollup-linux-x64-gnu": "npm:rollup",
    "@rollup/rollup-linux-x64-musl": "npm:rollup",
    "@rollup/rollup-darwin-x64": "npm:rollup",
    "@rollup/rollup-darwin-arm64": "npm:rollup"
  }
}
