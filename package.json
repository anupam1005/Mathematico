{
  "name": "mathematico-platform",
  "version": "1.0.0",
  "description": "Mathematico Learning Platform - Backend + Frontend (No Workspace)",
  "private": true,
  "scripts": {
    "dev:backend": "cd Backend && npm run dev",
    "dev:mobile": "cd Frontend-app && npm run dev",
    "start:backend": "cd Backend && npm start",
    "start:mobile": "cd Frontend-app && npx expo start --dev-client",
    "install:backend": "cd Backend && npm install",
    "install:mobile": "cd Frontend-app && npm install",
    "install:all": "npm run install:backend && npm run install:mobile",
    "clean:all": "cd Backend && rm -rf node_modules package-lock.json && cd ../Frontend-app && rm -rf node_modules package-lock.json .expo",
    "reset:all": "npm run clean:all && npm run install:all",
    "deploy:serverless": "vercel --prod",
    "deploy:preview": "vercel",
    "deploy:logs": "vercel logs",
    "setup:env": "node setup-env.js",
    "vercel-build": "echo 'No build step required for serverless function'"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcryptjs": "^2.4.3",
    "busboy": "^1.6.0",
    "cloudinary": "^2.5.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.4",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^6.9.16",
    "sharp": "^0.33.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "validator": "^13.15.15",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xtend": "^4.0.2"
  },
  "keywords": [
    "mathematico",
    "education",
    "react-native",
    "express",
    "backend",
    "mobile",
    "learning"
  ],
  "author": "Mathematico Team",
  "license": "MIT"
}
